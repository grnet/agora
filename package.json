{
  "name": "agora",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "express": "3.x",
    "mongoose": "3.x",
    "ejs": "1.x",
    "grunt-mongoimport": "*",
    "grunt":  "*",
    "grunt-cli": "*",
    "bower": "*"
  },
  "devDependencies": {
    "karma": "~0.10",
    "protractor": "~0.20.1",
    "karma-junit-reporter": "^0.2.2"
  },
  "scripts": {
    "postinstall": "bower install",

    "prestart": "npm install",
    "start": "node app.js",

    "debug": "node debug app.js",

    "pretest": "npm install && cp config/example.json config/development.json && node_modules/grunt-cli/bin/grunt db:import",
    "test": "cp config/example.json config/development.json && karma start test/ang/karma.conf.js",
    "test-single-run": "karma start test/ang/karma.conf.js --single-run",

    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",

    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor test/ang/protractor-conf.js"
  },
  "main": "app.js",
  "repository": "",
  "author": "",
  "license": ""
}